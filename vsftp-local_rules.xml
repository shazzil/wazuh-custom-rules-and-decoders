<group name="local,vsftpd,">
  <rule id="10005" level="0" noalert="1">
    <decoded_as>vsftpd</decoded_as>
    <description>Grouping for the vsftpd rules.</description>
  </rule>

  <rule id="10007" level="3">
    <if_sid>10005</if_sid>
    <match>CONNECT: Client</match>
    <group>connection_attempt,</group>
    <description>vsftpd: FTP session opened.</description>
  </rule>
  
  <rule id="10008" level="3">
    <if_sid>10005</if_sid>
    <match>OK LOGIN: </match>
    <description>vsftpd: Successful login by $(srcip)</description>
  </rule>

  <rule id="10006" level="5">
    <if_sid>10005</if_sid>
    <match>FAIL LOGIN: </match>
    <description>vsftpd: login failed by $(srcip)</description>
  </rule>

 <rule id="10010" level="4">
    <if_sid>10005</if_sid>
    <match>OK DOWNLOAD: </match>
    <description>vsftpd: file Downloaded Successfully by $(dstip)</description>
 </rule>

 <rule id="10011" level="5">
    <if_sid>10005</if_sid>
    <match>OK UPLOAD: </match>
    <description>vsftpd: file UPLOADED Successfully by $(dstip)</description>
 </rule>
 
 <rule id="10013" level="10" frequency="8" timeframe="120">
    <if_matched_sid>10006</if_matched_sid>
    <same_source_ip />
    <description>vsftpd: FTP brute force (multiple failed logins).</description>
 </rule>

 <rule id="10014" level="12" timeframe="180">
    <if_matched_sid>10013</if_matched_sid>
    <same_source_ip />
    <description>vsftpd: FTP brute force succesfully (login after multiple failed logins ).</description>
 </rule>

</group>
