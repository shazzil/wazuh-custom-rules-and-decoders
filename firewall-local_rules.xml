<group name="firewall,">
  <rule id="4100" level="0">
    <category>firewall</category>
    <description>Firewall rules grouped.</description>
  </rule>

  <rule id="4101" level="5">
    <if_sid>4100</if_sid>
    <action>DROP</action>
    <options>no_log</options>
    <description>Firewall drop event.</description>
    <group>firewall_drop,pci_dss_1.4,gpg13_4.12,gdpr_IV_35.7.d,hipaa_164.312.a.1,nist_800_53_SC.7,tsc_CC6.7,tsc_CC6.8,</group>
  </rule>
 
  <rule id="110004" level="6">
    <if_sid>4100</if_sid>
    <match>NMAP_FIN_SCAN</match>
    <description>Firewall: NMAP_FIN_SCAN from $(srcip)</description>
    <group>firewall_drop,pci_dss_1.4,gpg13_4.12,gdpr_IV_35.7.d,hipaa_164.312.a.1,nist_800_53_SC.7,tsc_CC6.7,tsc_CC6.8,</group>
  </rule>

  <rule id="110003" level="6">
    <if_sid>4100</if_sid>
    <match>FTP-SINGLE-SYN-SCAN</match>
    <description>Firewall: Nmap FTP-SINGLE-SYN-SCAN from $(srcip)</description>
    <group>firewall_drop,pci_dss_1.4,gpg13_4.12,gdpr_IV_35.7.d,hipaa_164.312.a.1,nist_800_53_SC.7,tsc_CC6.7,tsc_CC6.8,</group>
  </rule>


  <rule id="110001" level="6">
    <if_sid>4100</if_sid>
    <match>SYN-SCAN</match>
    <options>no_log</options>
    <description>Firewall: stealth scan from randow IP</description>
    <group>firewall_drop,pci_dss_1.4,gpg13_4.12,gdpr_IV_35.7.d,hipaa_164.312.a.1,nist_800_53_SC.7,tsc_CC6.7,tsc_CC6.8,</group>
  </rule>
  
  
  <rule id="110002" level="6" frequency="18" timeframe="45" ignore="60">
    <if_matched_sid>110001</if_matched_sid>
    <same_source_ip />
    <description>Firewall:Nmap full stealth scan from $(srcip) </description>
    <group>firewall_drop,pci_dss_1.4,gpg13_4.12,gdpr_IV_35.7.d,hipaa_164.312.a.1,nist_800_53_SC.7,tsc_CC6.7,tsc_CC6.8,</group>
  </rule>


  <rule id="4151" level="10" frequency="18" timeframe="45" ignore="240">
    <if_matched_sid>4101</if_matched_sid>
    <same_source_ip />
    <description>Multiple Firewall drop events from same source.</description>
    <group>multiple_drops,pci_dss_1.4,pci_dss_10.6.1,gpg13_4.12,gdpr_IV_35.7.d,hipaa_164.312.a.1,hipaa_164.312.b,nist_800_53_SC.7,nist_800_53_AU.6,tsc_CC6.7,tsc_CC6.8,tsc_CC7.2,tsc_CC7.3,</group>
  </rule>
</group>



